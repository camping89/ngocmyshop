@model PackageOrderModel

<div class="panel-group">
    @await Component.InvokeAsync("AdminWidget", new { widgetZone = "admin_packageorder_details_info_top", additionalData = Model.Id })
    <div class="panel panel-default">
        <div class="panel-body">
            <div class="form-group">
                <div class="col-md-3">
                    <nop-label asp-for="PackageCode" />
                </div>
                <div class="col-md-9">
                    <nop-editor asp-for="PackageCode" asp-required="true" />
                    <span asp-validation-for="PackageCode"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-3">
                    <nop-label asp-for="PackageName" />
                </div>
                <div class="col-md-9">
                    <nop-editor asp-for="PackageName" asp-required="true" />
                    <span asp-validation-for="PackageName"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-3">
                    <nop-label asp-for="ArrivalDatetime" />
                </div>
                <div class="col-md-9">
                    <nop-editor asp-for="ArrivalDatetime" />
                    <span asp-validation-for="ArrivalDatetime"></span>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-3">
                    <nop-label asp-for="PackageProcessedDatetime" />
                </div>
                <div class="col-md-9">
                    <nop-editor asp-for="PackageProcessedDatetime" />
                    <span asp-validation-for="PackageProcessedDatetime"></span>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-3">
                    <nop-label asp-for="IsShipped" />
                </div>
                <div class="col-md-9">
                    <nop-editor asp-for="IsShipped" />
                    <span asp-validation-for="IsShipped"></span>
                </div>
            </div>

        </div>
    </div>
    @await Component.InvokeAsync("AdminWidget", new { widgetZone = "admin_category_details_info_bottom", additionalData = Model.Id })
</div>