@model DateTime?
@using System.Globalization
@*<input id="@Html.IdForModel()" name="@Html.NameForModel()" value="@(Model > DateTime.MinValue || Model.HasValue ? Model.Value.ToString(CultureInfo.CurrentCulture.DateTimeFormat) : null)" />*@
<input id="@Html.IdForModel()" name="@Html.NameForModel()" value="@(Model > DateTime.MinValue || Model.HasValue ? Model.Value.ToString("dd/MM/yyyy HH:mm tt") : null)" />
<script type="text/javascript">
    $(document).ready(function () {
        $("#@Html.IdForModel()").kendoDateTimePicker({
            format: 'dd/MM/yyyy HH:mm tt',
            popup: {
                position: "bottom right",
                origin: "top right"
            }
        });
    });
</script>